@model ProductsListViewModel

@{
    ViewData["Title"] = "Product Page";
}

<div class="bg-light card border rounded">
    <div class="card-body py-2">
        <form class="form-inline">
            <label asp-for="CategoryId">Category</label>
            <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control ml-sm-2">
                <option value="">All</option>
            </select>
            <button class="btn ml-sm-3 mt-2 mt-sm-0" style="background-color: #d6b98d;">Filter</button>
        </form>
    </div>
</div>

<div class="row mt-3">
    @foreach (var item in Model.Products)
    {
        <div class="col col-sm-6 col-lg-4">
            <div class="card mb-3">
                <img class="card-img-top mt-2 product-image" src="~/img/Products/@item.PictureUri" alt="@item.ProductName" />
                <div class="card-body">
                    <h6 class="card-title product-name">@item.ProductName</h6>
                    <p class="card-text d-flex justify-content-between align-items-center">
                        <span class="h5 font-weight-lighter">@item.Price.ToString("$0.00")</span>
                        <a href="#" class="btn btn-sm btn-success"><i class="fas fa-shopping-cart"></i></a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>
